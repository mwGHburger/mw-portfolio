<div class="portfolio-page">
    <%= link_to root_path, class: "back-btn" do %>        
        <i class="fas fa-arrow-left"></i>
        <p>back</p>
    <% end%>
    <h1 class="porfolio-title">my <span style="font-weight: 700;">Portfolio<span> </h1>
    <div class="portfolio-grid-container">
        <% @projects.each do |project|%>
            <div class="project-card">
                <%= link_to project.project_link do %>
                    <%= image_tag project.project_thumbnail, class: "project-card-image", alt: "pic" %>
                <% end %>
                <p class="project-card-title"><%= project.name %></p>
            </div>
        <% end %>
    </div>
</div>